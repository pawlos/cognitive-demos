<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Microsoft Cognitive Services" Height="350" Width="525" FontSize="30" FontWeight="Black">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Content="Vision" />
        <Button Content="Speech" Grid.Column="1"/>
        <Button Content="Language" Grid.Row="1" />
        <Button Content="Knowledge" Grid.Row="1" Grid.Column="1" />
        <Button Content="Search" Grid.Row="2" Grid.ColumnSpan="2"></Button>
    </Grid>
</Window>
